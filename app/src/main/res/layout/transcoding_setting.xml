<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Video"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dialog_horizontal_margin"
            android:layout_marginTop="10dp"
            android:layout_marginRight="@dimen/dialog_horizontal_margin"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/transcoding_setting_left_width"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="Width"
                android:textColor="@android:color/black" />

            <SeekBar
                android:id="@+id/text_set_width"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:max="1024" />

            <TextView
                android:id="@+id/show_width"
                android:layout_width="@dimen/transcoding_setting_right_width"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="1"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dialog_horizontal_margin"
            android:layout_marginTop="10dp"
            android:layout_marginRight="@dimen/dialog_horizontal_margin"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/transcoding_setting_left_width"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="Height"
                android:textColor="@android:color/black" />

            <SeekBar
                android:id="@+id/text_set_height"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:max="1024" />

            <TextView
                android:id="@+id/show_height"
                android:layout_width="@dimen/transcoding_setting_right_width"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="1"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dialog_horizontal_margin"
            android:layout_marginTop="10dp"
            android:layout_marginRight="@dimen/dialog_horizontal_margin"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/transcoding_setting_left_width"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="BitRate"
                android:textColor="@android:color/black" />

            <SeekBar
                android:id="@+id/text_set_bitrate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:max="1800" />

            <TextView
                android:id="@+id/show_bitrate"
                android:layout_width="@dimen/transcoding_setting_right_width"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="1"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dialog_horizontal_margin"
            android:layout_marginTop="10dp"
            android:layout_marginRight="@dimen/dialog_horizontal_margin"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/transcoding_setting_left_width"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="FPS"
                android:textColor="@android:color/black" />

            <SeekBar
                android:id="@+id/text_set_fps"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:max="60" />

            <TextView
                android:id="@+id/show_fps"
                android:layout_width="@dimen/transcoding_setting_right_width"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="1"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dialog_horizontal_margin"
            android:layout_marginTop="10dp"
            android:layout_marginRight="@dimen/dialog_horizontal_margin"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/transcoding_setting_left_width"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="GOP"
                android:textColor="@android:color/black" />

            <SeekBar
                android:id="@+id/text_set_gop"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:max="60" />

            <TextView
                android:id="@+id/show_gop"
                android:layout_width="@dimen/transcoding_setting_right_width"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="1"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/cb_low_latency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:focusable="false"
            android:text="Low Latency"
            android:textColor="@android:color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dialog_horizontal_margin"
            android:layout_marginTop="10dp"
            android:layout_marginRight="@dimen/dialog_horizontal_margin"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Codec   "
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/codec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/codec_baseline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BaseLine"
                    android:textColor="@color/dark_black" />

                <RadioButton
                    android:id="@+id/codec_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Main"
                    android:textColor="@color/dark_black" />

                <RadioButton
                    android:id="@+id/codec_high"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="High"
                    android:textColor="@color/dark_black" />
            </RadioGroup>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Audio"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:text="SampleRate     "
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/samplerate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/samplerate_32"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="32k"
                    android:textColor="@color/dark_black" />

                <RadioButton
                    android:id="@+id/samplerate_44_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="44.1k"
                    android:textColor="@color/dark_black" />

                <RadioButton
                    android:id="@+id/samplerate_48"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="48k"
                    android:textColor="@color/dark_black" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="bitRate"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/transcoding_audio_bitrate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/transcoding_audio_bitrate_48"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="48K"
                    android:textColor="@color/dark_black" />

                <RadioButton
                    android:id="@+id/transcoding_audio_bitrate_128"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="128K"
                    android:textColor="@color/dark_black" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="audioChannel"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/transcoding_audio_channel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/transcoding_audio_channe_mono"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="MONO"
                    android:textColor="@color/dark_black" />

                <RadioButton
                    android:id="@+id/transcoding_audio_channe_stereo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="STEREO"
                    android:textColor="@color/dark_black" />
            </RadioGroup>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
